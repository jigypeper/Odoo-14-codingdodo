<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="estate_view_list">
      <field name="name">estate.view.list</field>
      <field name="model">estate.property</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="postcode"/>
          <field name="bedrooms"/>
          <field name="living_area"/>
          <field name="expected_price"/>
          <field name="selling_price"/>
          <field name="date_availability"/>
        </tree>
      </field>

    </record>

    <record model="ir.ui.view" id="estate_view_form">
      <field name="name">estate.view.form</field>
      <field name="model">estate.property</field>
      <field name="arch" type="xml">
        <form string="test">
          <sheet>
              <group>
                  <!-- <div> -->
          
                      <field name="name" class="mb12"/>
                  
                  <!-- </div> -->
                  <!-- <div> -->
                  <group >
                      <field name="postcode"/>
                      <field name="date_availability"/>
                  </group>
                  <!-- </div>
                  <div> -->
                  <group>
                      <field name="expected_price"/>
                      <field name="selling_price"/>
                  </group>
                  <!-- </div> -->
                  <notebook>
                      <page string="Description">
                          <group>
                            <field name="description"/>
                            <field name="bedrooms"/>
                            <field name="living_area"/>
                            <field name="fascades"/>
                            <field name="garage"/>
                            <field name="garden"/>
                            <field name="garden_area"/>
                            <field name="garden_orientation"/>
                          </group>
                      </page>
                      <page string="Test"></page>
                  </notebook>
              </group>
          </sheet>
        </form>
      </field>

    
    </record>

    <record model="ir.ui.view" id="estate_view_search">
      <field name="name">estate.view.search</field>
      <field name="model">estate.property</field>
      <field name="arch" type="xml">
        <search string="Custom Search">
          <field name="name"/>
          <field name="bedrooms"/>
          <field name="living_area"/>
          <field name="fascades"/>
          <field name="expected_price"/>
          <field name="postcode"/>
        </search>
      </field>
    </record>

    


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="action_estate">
      <field name="name">Add Property</field>
      <field name="res_model">estate.property</field>
      <field name="view_mode">tree,form</field>
    </record>


